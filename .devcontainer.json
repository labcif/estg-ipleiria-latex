{
  "name": "estg-ipleiria-latex",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/prulloac/devcontainer-features/latex:1.3.0": {
      "scheme": "full",
      "mirror": "https://eu.mirrors.cicku.me/ctan/systems/texlive/tlnet"
    },
    "ghcr.io/devcontainers/features/python:1": {}
  },
  "postCreateCommand": "pip install Pygments",
  "customizations": {
    "vscode": {
      "extensions": [
        "valentjn.vscode-ltex"
      ]
    }
  }
}
